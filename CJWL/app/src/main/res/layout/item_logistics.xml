<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/white">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:layout_width="50dp"
           android:layout_height="wrap_content"
           android:textSize="@dimen/text_minisize"
           android:text="From : "
           />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:id="@+id/tv_item_from_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="@dimen/text_minisize"
               android:text="白先生"
               />
           <TextView
               android:id="@+id/tv_item_from_address"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="@dimen/text_minisize"
               android:text="沈阳市大东区"
               />
       </LinearLayout>
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_minisize"
            android:text="To : "
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_item_to_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_minisize"
                android:text="老程"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tv_item_to_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_minisize"
                android:text="沈阳市法库县"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
